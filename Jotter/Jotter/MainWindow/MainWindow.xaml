			<RichTextBox Name="DescriptionBox" Grid.Row="2" Grid.Column="1" Margin="0 0 10 0" VerticalAlignment="Stretch"></RichTextBox>

			<TextBlock VerticalAlignment="Center" FontWeight="Bold" Grid.Row="3" Margin="10 0 0 0" FontSize="16">Category</TextBlock>
			<ComboBox Grid.Row="3" VerticalAlignment="Center" Grid.Column="1" Margin="0 0 10 0"></ComboBox>
			
