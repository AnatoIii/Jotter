		<Grid Grid.Column="2" Visibility="{Binding MainWindowState, ConverterParameter='noteViewing', Converter={StaticResource WindowState}}">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="1*"/>
				<ColumnDefinition Width="7*"/>
			</Grid.ColumnDefinitions>
			<Grid.RowDefinitions>
				<RowDefinition Height="30"/>
				<RowDefinition Height="50"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="30"/>
				<RowDefinition Height="150"/>
			</Grid.RowDefinitions>
			
			<Button VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5 0 0 0" Width="40" Command="{Binding CreateNoteCommand}">Back</Button>
			<TextBlock VerticalAlignment="Center" FontWeight="Bold" Grid.Row="1" Margin="10 0 0 0" FontSize="16" Grid.ColumnSpan="2" Text="{Binding Path=NewNoteData.Name}"></TextBlock>

			<TextBlock VerticalAlignment="Top" FontWeight="Bold" Grid.Row="2" Margin="10 0 0 0" FontSize="16" Grid.ColumnSpan="2" Text="{Binding Path=NoteData.Description}"></TextBlock>
			
			<TextBlock VerticalAlignment="Center" FontWeight="Bold" Grid.Row="3" Margin="10 0 0 0" FontSize="16" Grid.ColumnSpan="2">Attachments</TextBlock>
		</Grid>
	</Grid>
</Window>
