<Window x:Class="Jotter.MainWindow.MainForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Jotter.MainWindow"
        mc:Ignorable="d"
        Title="MainForm" Height="450" Width="800">
	<Window.Resources>
		<local:MainWindowDataVisibilityConverter x:Key="WindowState" />
	</Window.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="2*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="7*"/>
		</Grid.ColumnDefinitions>

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="30"/>
				<RowDefinition Height="*"/>
				<RowDefinition Height="30"/>
			</Grid.RowDefinitions>
			<Label FontWeight="Bold" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="0">Categories</Label>
			<ListBox Name="categoriesList" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1" Margin="3 0"></ListBox>
			<Button Content="Add category" Margin="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="2"></Button>
		</Grid>
		<GridSplitter Grid.Column="1" ShowsPreview="False" Width="3" HorizontalAlignment="Center" />
		<Grid Grid.Column="2" Visibility="{Binding MainWindowState, ConverterParameter='notesList', Converter={StaticResource WindowState}}">
			<Grid.RowDefinitions>
				<RowDefinition Height="30"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>
			<TextBlock VerticalAlignment="Center" FontWeight="Bold" Grid.Row="0" Margin="3 0 0 0">Notes</TextBlock>
			<ListView Margin="3" Name="lVNotesData" Grid.Row="1">
				<ListView.ItemTemplate>
					<DataTemplate>
						<Grid Height="100" Width="585">
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="7*"></ColumnDefinition>
								<ColumnDefinition Width="3*"></ColumnDefinition>
							</Grid.ColumnDefinitions>
							<Grid.RowDefinitions>
								<RowDefinition Height="*"></RowDefinition>
								<RowDefinition Height="*"></RowDefinition>
								<RowDefinition Height="*"></RowDefinition>
							</Grid.RowDefinitions>
							<TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="20" Grid.Column="0" Grid.Row="0" Padding="0"/>
							<TextBlock Text="{Binding Description}" Grid.Column="0" Grid.Row="1" Grid.RowSpan="2" />
							<Grid Grid.Row="2" Grid.Column="2">
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"></ColumnDefinition>
									<ColumnDefinition Width="*"></ColumnDefinition>
								</Grid.ColumnDefinitions>

								<Button HorizontalAlignment="Stretch" Margin="3">Edit</Button>
								<Button HorizontalAlignment="Stretch" Grid.Column="1" Margin="3">Attach file</Button>
							</Grid>
							<Button Grid.Column="1" Grid.Row="0" Margin="3">View full</Button>
						</Grid>
					</DataTemplate>
				</ListView.ItemTemplate>
			</ListView>
		</Grid>
